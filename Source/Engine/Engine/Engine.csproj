<Project Sdk="Microsoft.NET.Sdk">

      <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <RootNamespace>Spark.$(MSBuildProjectName.Replace(" ", "_"))</RootNamespace>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
      </PropertyGroup>

      <ItemGroup>
        <PackageReference Include="Jitter2" Version="2.1.1" />
        <PackageReference Include="SharpGLTF.Core" Version="1.0.0-alpha0030" />
	    <PackageReference Include="Silk.NET.Input.Common" Version="2.20.0" />
	    <PackageReference Include="Silk.NET.OpenGLES" Version="2.20.0" />
	    <PackageReference Include="Silk.NET.OpenGLES.Extensions.EXT" Version="2.20.0" />
	    <PackageReference Include="Silk.NET.OpenGLES.Extensions.ImGui" Version="2.20.0" />
        <PackageReference Include="StbImageSharp" Version="2.27.13" />
        <PackageReference Include="StbImageWriteSharp" Version="1.16.7" />
      </ItemGroup>

      <ItemGroup>
        <ProjectReference Include="..\Util\Util.csproj" />
      </ItemGroup>
    <ItemGroup>
	    <TrimmerRootAssembly Include="SharpGLTF.Schema2" />
    </ItemGroup>
    <ItemGroup>
      <Compile Update="Properties\Resources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>Resources.resx</DependentUpon>
      </Compile>
    </ItemGroup>
    <ItemGroup>
      <EmbeddedResource Update="Properties\Resources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Resources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>
</Project>
